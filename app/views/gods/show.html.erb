<div class="container card">
  <%# big breaker %>
  <div class="row">
    <%# left side %>
    <div class="col-6">
      <div class="row">
        <div class="col-12 card">
          <%# GOD PICTURE HERE  %>
          <div class="d-flex justify-content-center">
            <% if @god.photo.attached? then %>
              <%= render 'shared/god_image', god: @god %>
            <% else %>
              <%= render 'shared/false_image', god: @god %>
            <% end %>
          </div>
        </div>
        <div class="col-12 card">
          <p>Name: <%= @god.name %></p>
        </div>
        <div class="col-12 card">
          <p>Epitaph: <%= @god.epitaph %></p>
        </div>
        <div class="col-6 card">
          <p>Alignment: <%= @god.alignment.name %></p>
        </div>
        <div class="col-6 card">
          <p>Domain: <%= @god.domain.name %></p>
        </div>
        <div class="col-12 card">
          <p>Themes:</p>
          <ul>
            <% @god.themes.each do |theme| %>
              <li><%= theme %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <%# Right Side  %>
    <div class="col-6">
      <div class="row">
        <div class="col-12 card">
          <p>Description:</p>
          <%= @god.description %>
        </div>
        <div class="col-12 card">
          <p>Tenets:</p>
          <ul>
            <% @god.tenets.each do |tenet| %>
              <li><%= tenet %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <p>Prompts:</p>
      <p><%= @god.prompt %></p>
      <p><%= @god.img_prompt %></p>
    </div>
  </div>
