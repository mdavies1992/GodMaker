<h1>Gods#show</h1>
<p>Find me in app/views/gods/show.html.erb</p>
<div class="container">
  <div class="row">
    <div class="col-6">
      <div class="d-flex justify-content-center">
        <%= render 'shared/false_image' %>
      </div>
      <p>Name: <%= @god.name %></p>
      <p>Epitaph: <%= @god.epitaph %></p>
      <p>Alignment: <%= @god.alignment.name %></p>
      <p>Domain: <%= @god.domain.name %></p>
      <p>Themes:</p>
      <ul>
        <% @god.themes.each do |theme| %>
          <li><%= theme %></li>
        <% end %>
      </ul>
    </div>
    <div class="col-6">
      <p>Description:</p>
      <%= @god.description %>
      <p>Tenets:</p>
      <ul>
        <% @god.tenets.each do |tenet| %>
          <li><%= tenet %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <p>Prompts:</p>
  <p><%= @god.prompt %></p>
  <p><%= @god.img_prompt %></p>
</div>
